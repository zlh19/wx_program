@import '../../model/model.wxss';
body{
  background:#eee;
}

.ipt-wrap{
  height:100rpx;
  border-bottom:1px solid #ebebeb;
  display:flex;
  align-items:center;
}

.ipt-wrap .ipt-text{
  font-size:30rpx;
  padding-left:40rpx;
  line-height:1.5;
}

.ipt-wrap .ipt{
  flex:1;
  color:#333;
  font-size:30rpx;
  margin:0 80rpx 0 20rpx;
  line-height:1.5;
  vertical-align: middle;
}

.ipt-wrap .ipt-placeholder{
  color:#cbcbcb;
  font-size:30rpx;
}

.ipt-wrap .address-icon{
  width:22rpx;
  height:30rpx;
  background-image:url(data:image/png;base64,);
  background-repeat:no-repeat;
  background-size:contain;
  margin-right:40rpx;
}

.submit-btn{
  width:80%;
  margin:0 auto;
  height:100rpx;
  line-height:100rpx;
  background: #F7AB00;
  border-radius: 12rpx;
  color:#fff;
  font-size:32rpx;
  text-align:center;
  margin-top:40rpx;
}
