
.swiper{
	height:420rpx;
}

.swiper .slide-image{
  width:100%;
}

/* 详情信息 */
.p-infor{
  padding:14rpx 0 48rpx 0;
}

.p-infor .u-number{
  height:68rpx;
  line-height:68rpx;
  font-size:24rpx;
  color: #929292;
  position:relative;
  padding:0 0 0 70rpx;
}

.p-infor .u-number .u-icon{
  width:20rpx;
  height:20rpx;
  position:absolute;
  left:44rpx;
  top:50%;
  margin-top:-10rpx;
  background-image:url(data:image/png;base64,);
  background-repeat:no-repeat;
  background-size:contain;
}

.p-infor .u-text{
  padding:0 40rpx;
  font-size: 28rpx;
  color: #373737;
  text-align:justify;
}

/* 标题 */
.p-title{
  line-height:56rpx;
  font-size:28rpx;
  color: #373737;
  background:#eee;
  padding:0 40rpx;
}


/* 列表 */
.p-list{
  padding-bottom:100rpx;
}
.p-list .u-item{
  overflow:hidden;
}

.p-list .u-item-title{
  display:flex;
  align-items:center;
  justify-content:space-between;
  padding:34rpx 0 40rpx 0;
  border-bottom:1px solid #e8e8e8;
  margin:0 40rpx;
}
.p-list .u-item-title .u-title-text{
  font-size:28rpx;
  color: #373737;
}
.p-list .u-item-title .u-title-time{
  font-size:24rpx;
  color: #929292;
}

.p-list .u-item-pic-group{
  padding:40rpx 0 0 40rpx;
  display:flex;
}

.p-list .u-item-pic-wrap{
  width:140rpx;
  height:140rpx;
  overflow:hidden;
  margin:0 34rpx 0 0;
  display:flex;
  justify-content:center;
  align-items:center;
  background:#e9e9e9;
}

.btn{
  height:100rpx;
  line-height:100rpx;
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  font-size:32rpx;
  color:#fff;
  background:#F7AB00;
  border:0;
  border-radius:0px;
}

/* 弹出层 */
.dialog-user{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index:1024;
  display:flex;
  justify-content:center;
  align-items:center;
}
.dialog-bg{
  position:fixed;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index:512;
  background:rgba(0,0,0,.5);
  display:flex;
  justify-content:center;
  align-items:center;
}

.dialog-user .dialog-main{
  width:580rpx;
  border-radius:20rpx;
  background:#e5e3e2;
  position:relative;
  z-index:1024;
}
.dialog-user .dialog-user-title{
  font-size: 34rpx;
  color: #030303;
  text-align:center;
  padding:46rpx 0;
}

.dialog-user .dialog-content{
  padding-bottom:34rpx;
}
.dialog-user .ipt-wrap{
  position:relative;
  width:480rpx;
  margin:0 auto;
  height:88rpx;
  line-height:88rpx;
  background:#fff;
  border-radius:6rpx;
  overflow:hidden;
  margin-bottom:20rpx;
  padding-left:32rpx;
  box-sizing:border-box;
}
.dialog-user .ipt{
  font-size:30rpx;
  display:block;
  height:100%;
}
.dialog-user .ipt-placeholder{
  font-weight:normal;
  color: #929292;
  font-size:30rpx;
}
.dialog-user .btn-code{
  position:absolute;
  right:8rpx;
  top:50%;
  width:180rpx;
  height:68rpx;
  line-height:68rpx;
  margin-top:-34rpx;
  background: #E3E3E3; 
  font-size:24rpx;
  color:#373737;
  border:0;
  border-radius:6rpx;
  box-shadow:none;
  z-index:10;
}

.dialog-user .dialog-submit{
  border:0;
  border-top:1px solid #d4d4d4;
  height:86rpx;
  line-height:86rpx;
  text-align:center; 
  font-size: 34rpx;
  color: #0076FF;
  border-radius:0px 0px 0px 0px;
  background:none;
}

